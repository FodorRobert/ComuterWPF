<Window x:Class="ComuterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComuterWPF"
        mc:Ignorable="d"
        Title="ComputerShop" Height="400" Width="700">
    <Grid>
        <Menu x:Name="menu1" Height="40" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="16">
            <MenuItem Name="comp" Header="Számítógépek" HorizontalAlignment="Center" VerticalAlignment="Center" Click="comp_Click" Height="40" Width="143" Background="Black" BorderBrush="White" Foreground="White"/>
            <MenuItem Name="Ops" Header="Op rendszerek" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Ops_Click" Height="41" Width="157" Background="Black" BorderBrush="White" Foreground="White"/>
        </Menu>
        <DataGrid x:Name="dataGrid1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,45,153,0"/>
    </Grid>
</Window>
